<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

  <appender name="dtslog" class="org.apache.log4j.DailyRollingFileAppender">
    <param name="File" value="webapps/dts/dts.log"/>
    <param name="DatePattern" value=".yyyy-MM-dd-HH"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyy-MM-dd' 'HH:mm:ss.SSS} %-5p - %c%n%m%n"/>
    </layout>
  </appender>

  <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
     <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyy-MM-dd'T'HH:mm:ss.SSS Z} %-5p - %c - %m%n"/>
    </layout>
  </appender>

  <logger name="opendap.dts.DTSServlet">
    <level value="INFO" />
    <appender-ref ref="dtslog"/>
  </logger>

  <root>
    <level value="INFO"/>
    <appender-ref ref="stdout"/>
  </root>

</log4j:configuration>
